        <UniformGrid x:Name="fixturesGrid" Columns="1" Margin="633,0,0.333,40.333">
            <UniformGrid.Background>
                <ImageBrush ImageSource="background.jpg"/>
            </UniformGrid.Background>
        </UniformGrid>
        <ProgressBar x:Name="elProgreso" Margin="633,0,113.333,10.333" Background="#FF252525" Foreground="#FF3479AD" Height="25" VerticalAlignment="Bottom"/>
        <Label Content="Official Rules" Margin="0,0,10.333,10.333" VerticalAlignment="Bottom" Height="25" HorizontalAlignment="Right" Width="98" Foreground="#FFF9F9F9" FontSize="14" MouseDown="Label_MouseDown" Cursor="Hand"/>
    </Grid>
</Window>
